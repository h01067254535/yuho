<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 배경 이미지 -->
    <item android:drawable="@drawable/baseline_image_24"
        android:gravity="center"/>

    <!-- 테두리 설정 -->
    <item>
        <shape android:shape="rectangle">
            <!-- 투명 배경 -->
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="#848484" /> <!-- 테두리 색상 설정 -->
            <size android:height="40dp" /> <!-- 버튼의 높이 설정 -->
        </shape>
    </item>
</layer-list>